		<relativePath/> <!-- lookup parent from repository -->
	</parent>
	<groupId>com.beu</groupId>
	<artifactId>beu-bulk-result-downlaoder</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>beu-result-downloader</name>
	<description>Demo project for Spring Boot</description>
	<url/>
	<licenses>
		<license/>
	</licenses>
	<developers>
		<developer/>
